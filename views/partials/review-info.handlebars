<article class="review">
    <div>
        <a class="is-size-4 is-underlined is-capitalized" href="/review/{{id}}" target="_blank">{{title}}</a>
        <span>{{review.rating}}</span>
    </div>
    <div class="has-text-left is-size-7">
        Reviewed by - {{user.username}} on  {{format_date created_at}} 
        | 
        <a href="/review/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>