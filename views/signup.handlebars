    <div class="column-is-half">
        <h2 class="title has-text-centered">Signup:</h2><hr>
    <form class="signup-form has-text-justified">
        <div class="has-text-centered">
            <label class="is-size-4" for="username-signup">Username: </label>
            <input type="text" id="username-signup" />
        </div>

        <div class="has-text-centered">
            <label class="is-size-4" for="email-signup">Email: </label>
            <input type="text" id="email-signup">
        </div>

        <div class="has-text-centered">
            <label class="is-size-4" for="password-signup">Password: </label>
            <input type="password" id="password-signup">
        </div>

        <div class="has-text-centered">
            <button class="button has-background-link has-text-white" type="submit">Sign Up!</button>
        </div>
        </div>
